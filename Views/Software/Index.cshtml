@model IEnumerable<MMS.Models.Software>

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<script src="~/css/vendor/jquery/jquery.min.js"></script>
<script src="~/css/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<div class="text-center" style="padding-top: 56px;">
    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Softwares</h1>
            <div class="list-group">
            <a href="#" class="list-group-item">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">Category 3</a>
            </div>
        </div>
        
        <div class="col-lg-9" style="padding-top: 95px; padding-bottom: 100px;">

            <div class="row">
            @foreach (var item in Model) {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                        <a asp-action="Details" asp-route-id="@item.Id" style="color: #2c2320;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                        </h4>
                        <h5><b>@Html.DisplayNameFor(model => model.StartingPrice) : </b>@Html.DisplayFor(modelItem => item.StartingPrice)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    </div>
                    </div>
                </div>
                
            }

            </div>
        </div>
    </div>
</div>


